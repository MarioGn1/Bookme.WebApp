@model ConfigureBookingConfigurationViewModel

@{
    ViewBag.Title = "Now lets configure your shifts!";
}

<div class="bg-light col-12">
    <h2 class="heading-margin text-center m-3">@ViewBag.Title</h2>
    <form method="post">
        <hr />
        <div class="row mb-3">
            <div class="form-group col-md-4 ">
                <label asp-for="ShiftStart"></label>
                <input asp-for="ShiftStart" class="form-control" placeholder="08:30...">
                <span asp-validation-for="ShiftStart" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-4 ">
                <label asp-for="ShiftEnd"></label>
                <input asp-for="ShiftEnd" class="form-control" placeholder="16:30...">
                <span asp-validation-for="ShiftEnd" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-4 ">
                <label asp-for="ServiceInterval"></label>
                <input asp-for="ServiceInterval" class="form-control" placeholder="0">
                <span asp-validation-for="ServiceInterval" class="small text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <partial name="_WeeklySchedulePartial" />
            </div>
            <div class="col-md-9">
                <partial name="_BreaksPartial" />
            </div>
        </div>
        <div class="form-group text-center m-3">
            <input class="btn btn-primary col-2" style="margin-bottom: 10px" type="submit" value="Next" />
        </div>
    </form>
</div>
