@model ConfigureBookingConfigurationViewModel

@{
    ViewBag.Title = "Your Booking Configuration";
}

<div class="bg-light col-12">
    <h2 class="heading-margin text-center m-3">@ViewBag.Title</h2>
    <form method="post" disable="disable">
        <hr />
        <fieldset id="edit" disabled>
            <input asp-for="Id" class="form-control d-none" placeholder="08:30...">
            <div class="row mb-3">
                <div class="form-group col-md-4">
                    <label asp-for="ShiftStart"></label>
                    <input asp-for="ShiftStart" class="form-control" placeholder="08:30...">
                    <span asp-validation-for="ShiftStart" class="small text-danger"></span>
                </div>
                <div class="form-group col-md-4 disabled">
                    <label asp-for="ShiftEnd"></label>
                    <input asp-for="ShiftEnd" class="form-control" placeholder="16:30...">
                    <span asp-validation-for="ShiftEnd" class="small text-danger"></span>
                </div>
                <div class="form-group col-md-4 ">
                    <label asp-for="ServiceInterval"></label>
                    <input asp-for="ServiceInterval" class="form-control" placeholder="0">
                    <span asp-validation-for="ServiceInterval" class="small text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <partial name="_WeeklySchedulePartial" model="@Model"/>
                </div>
                <div class="col-md-9">
                    <partial name="_BreaksPartial" model="@Model"/>
                </div>
            </div>
        </fieldset>

        <div class="form-group text-center m-3">
            <input class="btn btn-secondary col-2 d-none" style="margin-bottom: 10px" id="close" type="button" value="Close" />
            <input class="btn btn-warning col-2" style="margin-bottom: 10px" type="button" id="btn-edit" value="Edit" />
            <input class="btn btn-primary col-2 d-none" style="margin-bottom: 10px" id="save" type="submit" value="Save" />
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/ShiftInfo/ShiftInfo.js"></script>
}