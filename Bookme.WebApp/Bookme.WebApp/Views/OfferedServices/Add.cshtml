@model AddOfferedServiceViewModel

@{
    ViewBag.Title = "Add Service";
}

<div class="bg-light col-12">
    <h2 class="heading-margin text-center">@ViewBag.Title</h2>
    <form method="post">
        <div class="row mb-3">
            <div class="form-group col-md-6">
                <label asp-for="OfferedService.Name"></label>
                <input asp-for="OfferedService.Name" class="form-control" placeholder="Name your service...">
                <span asp-validation-for="OfferedService.Name" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="OfferedService.Price"></label>
                <input asp-for="OfferedService.Price" class="form-control" placeholder="Service price...">
                <span asp-validation-for="OfferedService.Price" class="small text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="form-group col-md-6">
                <label asp-for="OfferedService.Duration"></label>
                <input asp-for="OfferedService.Duration" class="form-control" placeholder="Duration in minutes (optional)...">
                <span asp-validation-for="OfferedService.Duration" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="OfferedService.ServiceCategoryId"></label>
                <select asp-for="OfferedService.ServiceCategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="OfferedService.ServiceCategoryId" class="small text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="form-group col-md-6">
                <label asp-for="OfferedService.ServiceVisitationId">Visitation Types</label>
                <select asp-for="OfferedService.ServiceVisitationId" class="form-control">
                    @foreach (var visitationType in Model.VisitationTypes)
                    {
                        <option value="@visitationType.Id">@visitationType.Type</option>
                    }
                </select>
                <span asp-validation-for="OfferedService.ServiceVisitationId" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="OfferedService.VisitationPrice"></label>
                <input asp-for="OfferedService.VisitationPrice" class="form-control" placeholder="Visit price...">
                <span asp-validation-for="OfferedService.VisitationPrice" class="small text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OfferedService.Description"></label>
            <textarea asp-for="OfferedService.Description" class="form-control" rows="2"></textarea>
            <span asp-validation-for="OfferedService.Description" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OfferedService.ImageUrl"></label>
            <input asp-for="OfferedService.ImageUrl" class="form-control" placeholder="Image url of your service...">
            <span asp-validation-for="OfferedService.ImageUrl" class="small text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input class="btn btn-primary col-2" style="margin-bottom: 10px" type="submit" value="Save" />
        </div>
    </form>
</div>
