@model IEnumerable<ClientHomeViewModel>
@{
    ViewData["Title"] = "Home Page";
}


@if (User.Identity.IsAuthenticated)
{
    <div class="row col-12 mt-3"  >
        @foreach (var category in Model)
        {
            <div class="col-md-3 d-flex align-items-stretch card mb-2">
                <a asp-controller="" asp-action="" asp-route-id="" class="category btn mb-3 mt-3">
                    <div class="embed-responsive embed-responsive-16by9">
                        <img class="card-img-top embed-responsive-item" src="@category.ImageUrl" alt="@category.Name">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">@category.Name</h5>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="text-center transparent opacity">
        <div>
            <h4 class="text-danger ">No more notes!</h4>
            <h4 class="text-info">All your ordered services gathered in one place!</h4>
            <h4>Now its possible and easy to book the desired services and <br />track your schedule online with <a asp-area="" asp-controller="Home" asp-action="Index">Bookme web application</a>!</h4>
        </div>
    </div>
}



