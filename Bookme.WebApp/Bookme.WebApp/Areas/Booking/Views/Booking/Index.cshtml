@model ServiceBookingViewModel

<h2 class="heading-margin text-center">@Model.Name</h2>
<hr />
<div class="row bg-light border mb-3">
    <div class=" col-4 border-right mt-3 mb-3">
        <img class="d-block w-100 border" src="@Model.ImageUrl" alt="@Model.Name" />
        <label class="font-weight-bolder mt-3 mb-3" asp-for="OperatorName"></label>
        @Html.DisplayFor(m => m.OperatorName)
        <div class="row m-1 legend d-none">
            <div class="col-md-4 bg-success text-center">
                Free
            </div>
            <div class="col-md-4 bg-warning text-center">
                Break
            </div>
            <div class="col-md-4 bg-danger text-center">
                Busy
            </div>
        </div>
    </div>
    <div class="col-8 mt-3 mb-3">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="md-form md-outline input-with-post-icon datepicker">
                    <label class="font-weight-bolder mt-3 mb-3">Choose a date: </label>
                    <input class="d-none" id="booking" asp-for="ServiceId" name="serviceId" value="@Model.ServiceId" />
                    <input class="d-none" id="duration" asp-for="Duration" name="duration" value="@Model.Duration" />
                    <input placeholder="Select date" type="date" id="date" class="form-control">
                    <span class="small text-danger" id="calendar-warning"></span>
                </div>

                <div class="d-none post-form">
                    <label class="font-weight-bolder mt-3 mb-3">Confirm booking:</label>
                    <partial name="_BookingFormPartial" />
                </div>
                <label class="font-weight-bolder mt-3 mb-3 d-none" id="hours-label">Choose an hour:</label>
                <div class="schedule d-none" id="hours">
                    @*js render here*@
                </div>
                <div class="form-group text-center m-3">
                    <button class="btn btn-primary d-none" id="Chek_button">Check!</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/booking/booking.js"></script>
}
